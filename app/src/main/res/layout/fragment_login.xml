<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".UI.Fragments.LoginFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:userId="@+userId/login_credentials"
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+userId/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:userId="@+userId/email"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:background="@drawable/text_background"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:hint="Email ID"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColorHint="@color/borderGrey"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25" />


        <EditText
            android:userId="@+userId/password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/text_background"
            android:gravity="center"
            android:hint="Password"
            android:textColor="@color/colorPrimaryDark"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="@color/borderGrey"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+userId/email"
            app:layout_constraintStart_toStartOf="@+userId/email"
            app:layout_constraintTop_toBottomOf="@+userId/email" />

        <TextView
            android:userId="@+userId/error"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Email and Password cannor be left empty"
            android:textColor="@color/red"
            android:textSize="9sp"
            app:layout_constraintEnd_toEndOf="@+userId/password"
            app:layout_constraintStart_toStartOf="@+userId/password"
            app:layout_constraintTop_toBottomOf="@+userId/password" />

        <Button
            android:userId="@+userId/login"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/button_background"
            android:text="Log In"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+userId/password"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+userId/password"
            app:layout_constraintTop_toBottomOf="@+userId/error" />

        <TextView
            android:userId="@+userId/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/borderGrey"
            android:textSize="12sp"
            android:text="Forgot Password?"
            app:layout_constraintEnd_toEndOf="@+userId/login"
            app:layout_constraintStart_toStartOf="@+userId/login"
            app:layout_constraintTop_toBottomOf="@+userId/login" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:userId="@+userId/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="5"
            android:background="@color/borderGrey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" or " />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="5"
            android:background="@color/borderGrey" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:userId="@+userId/signUp_options"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@userId/divider">

        <TextView
            android:userId="@+userId/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Sign Up"
            android:textColor="@color/borderGrey"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.15" />

        <LinearLayout
            android:userId="@+userId/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+userId/textView"
            app:layout_constraintVertical_bias="0.32">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:userId="@+userId/google_signUp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/google_round"
                    app:civ_border_color="@color/borderGrey"
                    app:civ_border_width="0.5dp"
                    app:layout_constraintBottom_toTopOf="@+userId/google_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:userId="@+userId/google_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Google"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+userId/google_signUp"
                    app:layout_constraintStart_toStartOf="@+userId/google_signUp"
                    app:layout_constraintTop_toBottomOf="@+userId/google_signUp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:userId="@+userId/facebook_signUp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/facebook_round"
                    app:civ_border_color="@color/borderGrey"
                    app:civ_border_width="0.5dp"
                    app:layout_constraintBottom_toTopOf="@+userId/facebook_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:userId="@+userId/facebook_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Facebook"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+userId/facebook_signUp"
                    app:layout_constraintStart_toStartOf="@+userId/facebook_signUp"
                    app:layout_constraintTop_toBottomOf="@+userId/facebook_signUp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:userId="@+userId/phone_signUp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/phone"
                    app:civ_border_color="@color/borderGrey"
                    app:civ_border_width="0.5dp"
                    app:layout_constraintBottom_toTopOf="@+userId/phone_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:userId="@+userId/phone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Mobile"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+userId/phone_signUp"
                    app:layout_constraintStart_toStartOf="@+userId/phone_signUp"
                    app:layout_constraintTop_toBottomOf="@+userId/phone_signUp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:userId="@+userId/email_signUp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="8dp"
                    android:src="@mipmap/email"
                    app:civ_border_color="@color/borderGrey"
                    app:civ_border_width="0.5dp"
                    app:layout_constraintBottom_toTopOf="@+userId/email_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:userId="@+userId/email_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Email"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+userId/email_signUp"
                    app:layout_constraintStart_toStartOf="@+userId/email_signUp"
                    app:layout_constraintTop_toBottomOf="@+userId/email_signUp" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <com.facebook.login.widget.LoginButton
            android:userId="@+userId/facebook_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>